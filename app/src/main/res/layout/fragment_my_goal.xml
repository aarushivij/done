<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyGoal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/my_goal_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="goal name"
            android:textAllCaps="true"
            android:layout_margin="8dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/my_priority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:layout_margin="8dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/my_deadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deadline"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/my_motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="motivation"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/calendar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:layout_toRightOf="@id/edit_button"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/stats_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:layout_margin="16dp"
            android:layout_below="@+id/edit_button"/>

        <Button
            android:id="@+id/journal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal"
            android:layout_toRightOf="@id/stats_button"
            android:layout_below="@+id/calendar_button"
            android:layout_margin="16dp"/>





    </RelativeLayout>






</LinearLayout>






